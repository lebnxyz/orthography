{
  "name": "lebn-ortho",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "bundle": "browserify test.js -o test.bundle.js",
    "build-grammar": "nearleyc src/backend/conversion/grammar.ne -o src/backend/conversion/grammar.js",
    "test-grammar": "npm run build-grammar && nearley-test src/backend/conversion/grammar.js -i",
    "commit": "npm run build-grammar && git add src/backend/conversion/grammar.js && git commit"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "moo": "^0.5.1",
    "nearley": "^2.20.1",
    "vue": "^3.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/compiler-sfc": "^3.0.0",
    "@vue/eslint-config-airbnb": "^5.0.2",
    "babel-eslint": "^10.1.0",
    "better-nearley-railroad": "^1.3.0",
    "eslint": "^6.7.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-vue": "^7.0.0-0",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "@vue/airbnb"
    ],
    "ignorePatterns": "grammar.js",
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {
      "linebreak-style": "off",
      "max-classes-per-file": [
        "warn",
        1
      ],
      "quotes": [
        "warn",
        "backtick",
        {
          "avoidEscape": true
        }
      ],
      "prefer-destructuring": "off",
      "arrow-parens": [
        "warn",
        "as-needed",
        {
          "requireForBlockBody": false
        }
      ],
      "no-use-before-define": [
        "error",
        {
          "variables": false
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "no-multi-spaces": [
        "warn",
        {
          "ignoreEOLComments": true
        }
      ],
      "no-param-reassign": "off",
      "object-curly-spacing": [
        "error",
        "always",
        {
          "objectsInObjects": false
        }
      ],
      "object-curly-newline": "off",
      "no-underscore-dangle": "off",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
    }
  },
  "browserslist": [
    "> 1% and last 2 versions",
    "> .5% in LB"
  ]
}
