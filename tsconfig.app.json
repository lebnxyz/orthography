{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/frontend/*"
            ]
        },
        "types": [
            "vite/client"
        ],
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "target": "es2020",
        "strict": true,
        "noImplicitAny": true,
        "exactOptionalPropertyTypes": true,
        "noErrorTruncation": true,
        /* below are options i copied in once i removed the 'extends svelte' thing */
        "moduleResolution": "node",
        "isolatedModules": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
