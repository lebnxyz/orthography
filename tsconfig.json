{
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ],
    "references": [
        {
            "path": "./tsconfig.app.json"
        },
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "target": "es2020",
        "strict": true,
        "noImplicitAny": true,
        "exactOptionalPropertyTypes": true,
        /* below are options i copied in once i removed the 'extends svelte' thing */
        "moduleResolution": "node",
        "isolatedModules": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    }
}
