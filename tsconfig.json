{
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ],
    "exclude": [
        "node_modules/*",
        "public/*"
    ],
    "compilerOptions": {
        "noEmit": true,
        "target": "es2020",
        "strict": true,
        "noImplicitAny": true,
        "exactOptionalPropertyTypes": true,
        "noErrorTruncation": true,
        /* below are options i copied in once i removed the 'extends svelte' thing */
        "moduleResolution": "node",
        "isolatedModules": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "src",
        "paths": {
            "/*": [
                "./*"
            ]
        }
    }
}
